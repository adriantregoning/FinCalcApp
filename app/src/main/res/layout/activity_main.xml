<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5A5656"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnQuad"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginBottom="150dp"
        android:backgroundTint="#A84747"
        android:onClick="launchQuad"
        android:text="Quad - 4 fins"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnThruster"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="#4CAF50"
        android:onClick="launchThruster"
        android:text="Thruster - 3 fins"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dsc_8743_e1_cr" />

</androidx.constraintlayout.widget.ConstraintLayout>